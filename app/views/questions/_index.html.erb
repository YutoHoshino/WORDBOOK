<div class="form-group">
  <%= form_with url: search_questions_path, method: :get, local: true, class:"input-group" do |f| %>
    <%= f.text_field :search, placeholder: "検索", class:"form-control" %>
      <%= f.submit'検索', class:"btn btn-primary"%>
  <% end %>
</div>

<div class="form-group">
  <%= link_to '＋新規単語', new_question_path, class:"add-to"%>
</div>

<table class="table">
  <tr>
    <th scope="col">登録単語</th>
    <th scope="col">単語の説明</th>
    <th scope="col">修正</th>
    <th scope="col">削除</th>
  </tr>
  <% @questions.each do |question| %>
  <tr>
      <th scope="row"><%= link_to "#{question.question}", question_path(question.id) %></th>
      <td><%= link_to "#{question.description}", question_path(question.id) %></td>
      <td><%= link_to "修正する", edit_question_path(question.id) %></td>
      <td><%= link_to "削除する", "/questions/#{question.id}", method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }%></td>
  </tr>
  <% end %>
</table>